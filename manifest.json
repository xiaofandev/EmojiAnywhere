{
  "name": "EmojiAnyWhere",
  "version": "1.0",
  "description": "You can use emoj anywhere!",
  "manifest_version": 3,
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "action": {
    "default_popup": "html/popup.html"
  }
}
